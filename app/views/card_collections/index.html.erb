<%= link_to "Create a new collection", new_card_collection_path, class: "mt-4 inline-block bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-700" %>

<% if @card_collections.present? %>
  <div class="my-8">
    <div class="grid grid-cols-3 gap-6">
      <% @card_collections.each do |collection| %>
        <div class="flex flex-col items-center">
          <%= link_to image_tag("card_collection.png", title: collection.name, alt: collection.name, class: "w-full h-auto rounded"), card_collection_path(collection) %>
          <p class="text-white font-bold mt-2"><%= collection.name %></p>
          <p class="text-gray-400">Number of cards: <%= collection.card_ids.size %></p>
        </div>
      <% end %>
    </div>
  </div>

  <%= paginate @collection = @card_collections %>
  
<% else  %>
  <p class="text-gray-300 mt-8 text-xl">You have no collections.</p>
<% end %>
