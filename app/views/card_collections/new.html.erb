<div class="max-w-md mx-auto mt-8">
  <%= form_with(url: card_collections_path, local: true) do |form| %>
    <div class="mb-6">
      <%= form.label :name, "Collection Name:", class: "text-lg font-medium text-gray-300" %>
      <%= form.text_field :name, class: "border border-gray-700 bg-gray-900 text-gray-200 rounded-lg p-2 w-full", required: true %>
    </div>

    <% if flash[:error] %>
      <div class="mb-4 text-red-500">
        <%= flash[:error] %>
      </div>
    <% end %>

    <%= form.submit "Create Collection", class: "bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-700" %>
  <% end %>
</div>
