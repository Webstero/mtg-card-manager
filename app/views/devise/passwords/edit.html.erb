<div class="max-w-md mx-auto mt-8 p-8 bg-gray-800 rounded-lg shadow-lg">
  <h2 class="text-4xl font-bold text-center mb-6 text-gray-200">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: "space-y-6") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="space-y-4">
      <div class="flex flex-col">
        <%= f.label :password, "New password *", class: "text-lg font-medium text-gray-300" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-400"><%= @minimum_password_length %> characters minimum</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "border border-gray-700 bg-gray-900 text-gray-200 rounded-lg p-2 w-full" %>
      </div>

      <div class="flex flex-col">
        <%= f.label :password_confirmation, "Confirm new password *", class: "text-lg font-medium text-gray-300" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border border-gray-700 bg-gray-900 text-gray-200 rounded-lg p-2 w-full" %>
      </div>
    </div>

    <div class="actions mt-6">
      <%= f.submit "Change my password", class: "bg-blue-600 text-white font-semibold py-2 px-6 rounded-lg hover:bg-blue-700" %>
    </div>
  <% end %>

  <%= link_to "← Back", :back, class: "bg-gray-600 text-white font-semibold py-2 px-4 mt-4 block text-center rounded-lg hover:bg-gray-500" %>
</div>
