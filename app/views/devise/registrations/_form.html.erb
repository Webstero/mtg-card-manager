<div class="max-w-md mx-auto mt-8 p-8 bg-gray-800 rounded-lg shadow-lg">
  <h2 class="text-4xl font-bold text-center mb-6 text-gray-200">
    <%= action_name == "edit" ? "Edit Your Profile" : "Sign Up" %>
  </h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: action_name == "edit" ? :put : :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, "Email*", class: "block text-gray-300 font-medium mb-2" %>
      <%= f.email_field :email, autocomplete: "email", class: "border border-gray-700 bg-gray-900 text-gray-200 rounded-lg p-2 w-full" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-gray-300 mb-4">
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :password, action_name == "edit" ? "Password (leave blank if you don't want to change it)" : "Password*", class: "block text-gray-300 font-medium mb-2" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "border border-gray-700 bg-gray-900 text-gray-200 rounded-lg p-2 w-full" %>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-400"><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, "Password confirmation*", class: "block text-gray-300 font-medium mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border border-gray-700 bg-gray-900 text-gray-200 rounded-lg p-2 w-full" %>
    </div>

    <% if action_name == "edit" %>
      <div class="mb-4">
        <%= f.label :current_password, "Current password*", class: "block text-gray-300 font-medium mb-2" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "border border-gray-700 bg-gray-900 text-gray-200 rounded-lg p-2 w-full" %>
      </div>
    <% end %>

    <div class="flex items-center justify-between">
      <%= f.submit action_name == "edit" ? "Update" : "Sign Up", class: "bg-blue-600 text-white font-semibold py-2 px-6 rounded-lg hover:bg-blue-700" %>
    </div>
  <% end %>

  <% if action_name == "edit" %>
    <h3 class="text-2xl font-bold text-gray-200 mt-8">Cancel my account</h3>
    <div class="mt-4">
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "bg-red-600 text-white font-semibold py-2 px-6 rounded-lg hover:bg-red-700" %>
    </div>
  <% end %>

  <%= link_to "â† Back", :back, class: "bg-gray-600 text-white font-semibold py-2 px-4 mt-4 block text-center rounded-lg hover:bg-gray-500" %>
</div>
