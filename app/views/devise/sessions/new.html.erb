<div class="max-w-md mx-auto mt-8 p-8 bg-gray-800 rounded-lg shadow-lg">
  <h1 class="text-4xl font-bold text-center mb-6 text-gray-200">Sign In</h1>

  <% if flash[:alert] %>
    <div class="mb-4 p-4 bg-red-600 text-white rounded-lg">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_with url: new_user_session_path, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :email, "Email", class: "block text-gray-300 font-medium mb-2" %>
      <%= form.email_field :email, autofocus: true, class: "border border-gray-700 bg-gray-900 text-gray-200 rounded-lg p-2 w-full" %>
    </div>

    <div class="mb-6">
      <%= form.label :password, "Password", class: "block text-gray-300 font-medium mb-2" %>
      <%= form.password_field :password, autocomplete: "current-password", class: "border border-gray-700 bg-gray-900 text-gray-200 rounded-lg p-2 w-full" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "Log in", class: "bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-700" %>
      <%= link_to "Forgot your password?", new_user_password_path, class: "text-gray-300 hover:text-gray-400" %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <p class="text-gray-300">
      Don't have an account?
      <%= link_to "Sign up", new_user_registration_path, class: "text-blue-500 hover:text-blue-400" %>
    </p>
  </div>

  <%= link_to "← Back", :back, class: "bg-gray-600 text-white font-semibold py-2 px-4 mt-4 block text-center rounded-lg hover:bg-gray-500" %>
</div>
