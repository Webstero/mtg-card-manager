<div class="max-w-4xl mx-auto mt-8 p-8">
  <h1 class="text-4xl font-bold text-center mb-6 text-gray-200"><%= @card.name %></h1>

  <div class="flex flex-col items-center">
    <img src="<%= @card.image_url %>" title="<%= @card.name %>" alt="<%= @card.name %>" class="w-1/2 h-auto rounded mb-4" />
    
    <div class="text-gray-300 text-lg">
      <p><strong>Set:</strong> <%= @card.set_code %></p>
      <p><strong>Type:</strong> <%= @card.type %></p>
      <p><strong>Rarity:</strong> <%= @card.rarity %></p>
      <p><strong>Text:</strong> <%= @card.text %></p>
    </div>

    <% if user_signed_in? && current_user.card_collections.any? %>
      <%= render "card_collections/add_card_form" %>
    <% end %>


    <div class="mt-8">
      <%= link_to "← Back to search", root_path(@permitted_params), class: "bg-gray-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-gray-500" %>
    </div>
  </div>
</div>
